<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/idMostrarContacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contacto" />

    <TextView
        android:id="@+id/idMostrarFechaEntrega"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha entrega" />

    <TextView
        android:id="@+id/idMostrarItems"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Items" />


    <TextView
        android:id="@+id/idMostrarPagar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Pagar" />

    <TextView
        android:id="@+id/idMostrarEstado"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Estado" />

    <Button
        android:id="@+id/idBotonCancelar"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Cancelar" />

    <Button
        android:id="@+id/idBtnVerDetalle"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Ver detalle" />

</LinearLayout>
